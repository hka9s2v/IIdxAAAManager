# Environment variables example
# Copy this file to .env.local for local development

# Prisma Database URL
# For local development: postgresql://username@localhost:5432/database_name
# For production (NeonDB): postgresql://username:password@host/database?sslmode=require
DATABASE_URL="postgresql://username@localhost:5432/iidx_bpi_manager?schema=public"

# NextAuth.js configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Session configuration
SESSION_COOKIE_NAME="iidx-session"